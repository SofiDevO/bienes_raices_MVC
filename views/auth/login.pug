extends ../layout/index
block mainContent
    section.py-10
        h1.text-center.text-4xl.font-extrabold Bienes
            span.font-normal Raíces
        h2.text-center.text-lg.mt-2= page

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow.space-y-3
                form.space-y-4(method="POST", action="/auth/login" novalidate)
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="email") Tu correo electrónico
                        input#email.w-full.px-3.py-2.border.border-gray-300.rounded-sm.placeholder-gray-400(placeholder="Tu correo electrónico", type="email", name="email")
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-2.font-bold(for="password")  Password
                        input#password.w-full.px-3.py-2.border.border-gray-300.rounded-sm.placeholder-gray-400(placeholder="Tu password", type="password", name="password")
                    div.flex.justify-between.items-center
                        a(href="/auth/register", class="text-sm text-gray-600 hover:text-violet-800 ") ¿Aún no tienes una cuenta? Crea una
                        a(href="/auth/forgot-password", class="text-sm text-gray-600 hover:text-violet-800 ") ¿Olvidaste tu password?

                    input(type="submit", value="Iniciar Sesión", class="bg-violet-600 w-full text-white uppercase font-bold py-2 rounded hover:cursor-pointer hover:bg-violet-700 transition-colors")